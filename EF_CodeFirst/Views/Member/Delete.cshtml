@model Member
@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-3">Kategori Sil</h1>
<div>
    <h4>Member Id</h4>
    <p>@Model.MemberId</p>
    <h5>Member Name</h5>
    <p>@Model.MemberName</p>
    <h5>Member Surname</h5>
    <p>@Model.MemberSurname</p>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="MemberId">
    <input type="submit" value="Kategori türünü Sil" class="btn btn-sm btn-danger">
</form>
<a asp-action="Index">Kategori Türlerine dön</a>