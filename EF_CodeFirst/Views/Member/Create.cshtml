@model Member
@{
    ViewData["Title"] = "Create";
}


<h1 class="display-3"> Add New Member</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label" >Member Name</label>
                <input type="text" asp-for="MemberName" class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label" >CategoryDescription</label>
                <input type="text" asp-for="MemberSurname" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-info">
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Kategori Sayfasına Geri Dön</a>
</div>