@model Publisher
@{
    ViewData["Title"] = "Create";
}

<h1 class="display-3"> Add New Publisher</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label" >Publisher Name</label>
                <input type="text" asp-for="PublisherName" class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label" >Publisher City</label>
                <input type="text" asp-for="PublisherCity" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-info">
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Kategori Sayfasına Geri Dön</a>
</div>