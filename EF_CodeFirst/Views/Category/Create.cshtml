@model Category
@{
    ViewData["Title"] = "Create";
}


<h1 class="display-3">Yeni Kategori Türü</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label" >CategoryName</label>
                <input type="text" asp-for="CategoryName" class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label" >CategoryDescription</label>
                <input type="text" asp-for="CategoryDescription" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-info">
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Kategori Sayfasına Geri Dön</a>
</div>